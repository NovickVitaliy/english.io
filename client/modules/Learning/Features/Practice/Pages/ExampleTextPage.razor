@page "/practice/example-text"
@using MudBlazor
@using Shared.Layout
@layout EmptyLayout
<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Align="Align.Center">@Localizer["Title"]</MudText>
    <MudPaper Class="p-3">
        @if (_exampleText is not null)
        {
            <MudText>@(new MarkupString(_exampleText))</MudText>
        }
        else
        {
            <MudText>@Localizer["Loading"]</MudText>
        }
        <div class="mt-3 d-flex justify-content-center align-items-center">
            <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled="_finishPracticeButtonDisabled" OnClick="FinishPractice">
                @Localizer["Finish_Practice"]
            </MudButton>
        </div>
    </MudPaper>
</MudContainer>
