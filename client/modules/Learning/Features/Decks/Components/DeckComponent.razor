@using MudBlazor
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    @if (DeckState.Value.IsLoading)
    {
        <MudText Typo="Typo.h5" Align="Align.Center">@Localizer["Deck_Is_Loading"]</MudText>
    }
    @if (DeckState.Value.DeckWithWordsDto is not null)
    {
        <MudText Typo="Typo.h4" Class="mb-3">@DeckState.Value.DeckWithWordsDto!.Topic</MudText>
        <MudDivider Class="mt-3 mb-3"></MudDivider>
        @foreach (var word in DeckState.Value.DeckWithWordsDto!.DeckWords)
        {
            <MudButton OnClick="@(() => ShowWordDialog(word))" Style="padding: 0" Class="mb-3 w-100 justify-content-start">
                <MudPaper Class="p-3 w-100">
                    <MudText Typo="Typo.body1" Class="fw-bold mb-1">
                        @word.EnglishVersion
                    </MudText>
                    <MudText Typo="Typo.body2">
                        @word.UkrainianVersion
                    </MudText>
                </MudPaper>
            </MudButton>
        }
    }
</MudContainer>
