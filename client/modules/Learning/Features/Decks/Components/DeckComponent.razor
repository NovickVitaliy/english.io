@using MudBlazor
<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    @if (_deckDto is not null)
    {
        <MudText Typo="Typo.h4" Class="mb-3">@_deckDto.Topic</MudText>
        <MudDivider></MudDivider>
        @foreach (var word in _deckDto.DeckWords)
        {
            <MudButton Style="padding: 0" Class="mt-3 w-100 justify-content-start">
                <MudPaper Class="p-3 w-100">
                    <MudText Typo="Typo.body1" Class="fw-bold mb-1">
                        @word.EnglishVersion
                    </MudText>
                    <MudText Typo="Typo.body2">
                        @word.UkrainianVersion
                    </MudText>
                </MudPaper>
            </MudButton>
        }
    }
</MudContainer>
