@page "/verify-email"
@using MudBlazor
@using Shared.Layout
@layout EmptyLayout
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudContainer Class="d-flex justify-content-center align-items-center" MaxWidth="MaxWidth.ExtraLarge">
    @if (!UserState.Value.IsEmailVerified)
    {
        <MudPaper Class="d-flex justify-content-center align-items-center flex-column p-3 w-50 mt-5">
            <MudText Typo="Typo.h5">@Localizer["Verify_Email_Prompt"]</MudText>
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="VerifyEmail">@Localizer["Confirm"]</MudButton>
        </MudPaper>
    }
    @if (UserState.Value.IsEmailVerified)
    {
        <MudPaper Class="d-flex justify-content-center align-items-center flex-column p-3 w-50 mt-5">
            <MudText Typo="Typo.h5">@Localizer["Email_Already_Confirmed"]</MudText>
        </MudPaper>
    }
</MudContainer>
