@layout DashboardLayout
@page "/learning/settings"
@using Learning.Layouts
@using MudBlazor
@using Learning.Features.Settings.Components
@using Learning.Features.Settings.Components.SecurityComponent

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid Class="mt-1">
        <MudItem md="2">
            <SettingsOptions OnOptionChanged="value => CurrentOption = value"></SettingsOptions>
        </MudItem>
        <MudItem md="10">
            <MudPaper Class="p-3">
                @switch (CurrentOption)
                {
                    case Models.SettingsOptions.Security:
                        <Security></Security>
                        break;
                    case Models.SettingsOptions.Preferences:
                        <MudText Typo="Typo.h4">Preferences 1</MudText>
                        break;
                    case Models.SettingsOptions.SessionsHistory:
                        <SessionsHistory></SessionsHistory>
                        break;
                }
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
