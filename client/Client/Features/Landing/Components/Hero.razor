@inject IStringLocalizer<App> Localizer
@using Microsoft.Extensions.Localization
@using MudBlazor
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="d-flex justify-content-center align-items-center flex-column">
    <MudText Typo="Typo.h1" Align="Align.Center" Class="mt-5">
        Learn English with AI @Localizer["Hello World"]
    </MudText>
    <MudText Typo="Typo.h5" Align="Align.Center" GutterBottom="true">
        Improve your English skills through interactive AI-based learning
    </MudText>
    <MudGrid Class="d-flex justify-center align-center">
        <MudItem xs="12" sm="6" md="3">
            <MudButton  Href="/register" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" FullWidth="true">
                Start Learning Now
            </MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>