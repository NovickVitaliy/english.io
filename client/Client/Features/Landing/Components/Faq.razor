@using Microsoft.Extensions.Localization
@using MudBlazor
@inject IStringLocalizer<App> Localizer
<MudContainer id="faq" MaxWidth="MaxWidth.Large" Class="text-center py-8">
    <MudText Typo="Typo.h3" GutterBottom Class="mb-4">
        @Localizer["FAQ_Header"]
    </MudText>
    <MudText Typo="Typo.body1" Class="mb-6">
        @Localizer["FAQ_Text1"]
    </MudText>

    <MudExpansionPanels>
        <MudExpansionPanel Text="@Localizer["FAQ_Question1"]">
            <MudText Typo="Typo.body2">
                @Localizer["FAQ_Answer1"]
            </MudText>
        </MudExpansionPanel>

        <MudExpansionPanel Text="@Localizer["FAQ_Question2"]">
            <MudText Typo="Typo.body2">
                @Localizer["FAQ_Answer2"]
            </MudText>
        </MudExpansionPanel>

        <MudExpansionPanel Text="@Localizer["FAQ_Question3"]">
            <MudText Typo="Typo.body2">
                @Localizer["FAQ_Answer3"]
            </MudText>
        </MudExpansionPanel>

        <MudExpansionPanel Text="@Localizer["FAQ_Question4"]">
            <MudText Typo="Typo.body2">
                @Localizer["FAQ_Answer4"]
            </MudText>
        </MudExpansionPanel>
    </MudExpansionPanels>
</MudContainer>
